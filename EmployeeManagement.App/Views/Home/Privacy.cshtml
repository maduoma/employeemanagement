@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Full-Width Hero Section -->
<div class="privacy-hero">
    <div class="container text-center">
        <h1 class="text-white fw-bold animate__animated animate__fadeInDown">Privacy Policy</h1>
        <p class="text-light animate__animated animate__fadeInUp">Your privacy is important to us. This policy explains how we collect, use, and protect your information.</p>
    </div>
    <div class="wave"></div>
</div>

<!-- Full-Width Sections -->
<section class="privacy-section">
    <div class="section-content">
        <h4><i class="fas fa-user-shield icon"></i> Information We Collect</h4>
        <p>
            We may collect personal information such as your name, email address, phone number, and other details when you interact with our services.
            This includes information provided during account creation, form submissions, or other communications.
        </p>
    </div>
</section>

<section class="privacy-section bg-alternate">
    <div class="section-content">
        <h4><i class="fas fa-cogs icon"></i> How We Use Your Information</h4>
        <ul>
            <li>To provide and maintain our services.</li>
            <li>To communicate with you regarding updates, offers, or support.</li>
            <li>To improve the functionality and security of our platform.</li>
        </ul>
    </div>
</section>

<section class="privacy-section">
    <div class="section-content">
        <h4><i class="fas fa-lock icon"></i> Data Protection and Security</h4>
        <p>
            We implement industry-standard security measures to protect your personal data from unauthorized access, loss, or misuse.
            However, please note that no system is entirely foolproof, and we encourage you to take appropriate precautions to safeguard your information.
        </p>
    </div>
</section>

<section class="privacy-section bg-alternate">
    <div class="section-content">
        <h4><i class="fas fa-user-times icon"></i> Your Rights and Choices</h4>
        <p>You have the right to:</p>
        <ul>
            <li>Access, update, or delete your personal information.</li>
            <li>Opt out of receiving promotional communications.</li>
            <li>Request details about how your data is processed.</li>
        </ul>
    </div>
</section>

<section class="privacy-section">
    <div class="section-content">
        <h4><i class="fas fa-info-circle icon"></i> Updates to This Policy</h4>
        <p>
            We may update this privacy policy from time to time. Any changes will be posted on this page, and we will notify you if significant updates are made.
        </p>
    </div>
</section>

<!-- Contact link -->
<p class="text-center mt-4">
    If you have any questions or concerns about this privacy policy, please <a asp-controller="Home" asp-action="Contact">contact us</a>.
</p>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* Full-Width Hero */
        .privacy-hero {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            padding: 100px 20px;
            position: relative;
            width: 100%;
        }

        h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: url('https://svgshare.com/i/tkH.svg') no-repeat center;
            background-size: cover;
        }

        /* Section styling */
        .privacy-section {
            width: 100%;
            padding: 60px 0;
        }

        .section-content {
            max-width: 900px;
            margin: auto;
            padding: 0 20px;
        }

        .bg-alternate {
            background-color: #f4f4f9;
        }

        h4 {
            font-weight: 600;
            font-size: 2rem;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            color: #343a40;
        }

        p, ul {
            font-size: 1.2rem;
            color: #495057;
        }

        ul {
            padding-left: 20px;
        }

        li {
            margin-bottom: 12px;
        }

        .icon {
            font-size: 2.4rem;
            margin-right: 15px;
            color: #007bff;
        }

        /* Link styles */
        a {
            color: #007bff;
            font-weight: 600;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            h1

        {
            font-size: 2.5rem;
        }

        h4 {
            font-size: 1.5rem;
        }

        p, ul {
            font-size: 1rem;
        }

        .privacy-section {
            padding: 40px 15px;
        }

        }
    </style>
}
