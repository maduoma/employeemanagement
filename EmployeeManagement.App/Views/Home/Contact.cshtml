@model EmployeeManagement.App.Dtos.ContactCreateDto

@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<div class="contact-hero">
    <div class="container text-center">
        <h1 class="text-white fw-bold animate__animated animate__fadeInDown">Contact Us</h1>
        <p class="text-light animate__animated animate__fadeInUp">Have questions or need support? We're here to help.</p>
    </div>
    <div class="wave"></div>
</div>

<!-- Display success or error message if available -->
<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
</div>

<!-- Contact Form Section -->
<section class="contact-section">
    <div class="section-content">
        <h4 class="text-center mb-4"><i class="fas fa-envelope icon"></i> Get in Touch</h4>
        <form asp-action="Contact" method="post" class="row g-4">
            @Html.AntiForgeryToken()
            <div class="col-md-6">
                <label for="name" class="form-label fw-bold">Full Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" id="name" name="Name" class="form-control" placeholder="Your Full Name" required />
                </div>
            </div>
            <div class="col-md-6">
                <label for="email" class="form-label fw-bold">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" id="email" name="Email" class="form-control" placeholder="Your Email Address" required />
                </div>
            </div>
            <div class="col-12">
                <label for="message" class="form-label fw-bold">Message</label>
                <textarea id="message" name="Message" class="form-control" rows="6" placeholder="Your Message" required></textarea>
            </div>
            <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-gradient btn-lg">
                    <i class="fas fa-paper-plane"></i> Send Message
                </button>
            </div>
        </form>
    </div>
</section>

<!-- Additional Contact Info -->
<section class="contact-info-section bg-alternate">
    <div class="section-content text-center">
        <h4 class="mb-4"><i class="fas fa-phone icon"></i> Other Ways to Reach Us</h4>
        <p><i class="fas fa-phone-alt"></i> Phone: +1 (123) 456-7890</p>
        <p><i class="fas fa-map-marker-alt"></i> Address: 123 Business Lane, Suite 100, New York, NY 10001</p>
        <p><i class="fas fa-clock"></i> Business Hours: Mon-Fri, 9 AM to 5 PM</p>
    </div>
</section>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        /* Hero Section */
        .contact-hero {
            background: linear-gradient(to right, #0072ff, #00c6ff);
            color: white;
            padding: 100px 20px;
            position: relative;
            width: 100%;
        }

        h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: url('https://svgshare.com/i/tkH.svg') no-repeat center;
            background-size: cover;
        }
        /* Section styling */
        .contact-section {
            width: 100%;
            padding: 60px 0;
        }

        .contact-info-section {
            padding: 40px 20px;
        }

        .section-content {
            max-width: 800px;
            margin: auto;
            padding: 0 20px;
        }

        .bg-alternate {
            background-color: #f4f4f9;
        }

        h4 {
            font-weight: 600;
            font-size: 2rem;
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #343a40;
        }

        .icon {
            font-size: 2.4rem;
            margin-right: 10px;
            color: #007bff;
        }

        p {
            font-size: 1.2rem;
            color: #495057;
        }
        /* Form styling */
        .form-label {
            font-weight: 600;
            color: #495057;
        }

        .input-group-text {
            background-color: #e9ecef;
            border-right: none;
        }

        .form-control {
            border-left: none;
            box-shadow: none;
            border-radius: 0 0.375rem 0.375rem 0;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #007bff, #6610f2);
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #6610f2, #007bff);
                transform: scale(1.05);
            }
        /* Responsive Design */
        @@media (max-width: 768px) {
            h1

        {
            font-size: 2.5rem;
        }

        h4 {
            font-size: 1.5rem;
        }

        p {
            font-size: 1rem;
        }

        .contact-section {
            padding: 40px 15px;
        }

        }
    </style>
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // If a success message exists, wait 3 seconds then redirect to Home page.
            if ($(".alert-success").length > 0) {
                setTimeout(function () {
                    window.location.href = '@Url.Action("Index", "Home")';
                }, 3000);
            }
        });
    </script>
}