@{
    ViewData["Title"] = "Welcome to Employee Management";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container text-center">
        <h1 class="text-white fw-bold animate__animated animate__fadeInDown">Welcome to Employee Management</h1>
        <p class="text-light animate__animated animate__fadeInUp">Efficiently manage your employees, boost productivity, and make data-driven decisions.</p>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-gradient btn-lg mt-4">
            <i class="fas fa-users"></i> View Employee Records
        </a>
    </div>
    <div class="wave"></div>
</div>

<!-- Features Section -->
<section class="features-section">
    <div class="section-content text-center">
        <h2 class="mb-5">Why Choose Us?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-tachometer-alt icon"></i>
                    <h4>Real-Time Analytics</h4>
                    <p>Track employee performance and productivity in real-time with our analytics dashboard.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-user-shield icon"></i>
                    <h4>Secure Data Management</h4>
                    <p>Your data is safe with us. We implement the highest standards of security and privacy protection.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="fas fa-clock icon"></i>
                    <h4>24/7 Support</h4>
                    <p>Our dedicated support team is available 24/7 to help you resolve any issues promptly.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section bg-alternate">
    <div class="section-content text-center">
        <h2 class="mb-5">What Our Clients Say</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="testimonial-card">
                    <p>"Employee Management transformed the way we handle HR operations. It's a game-changer!"</p>
                    <h5 class="text-primary">John Doe, CEO of XYZ Corp</h5>
                </div>
            </div>
            <div class="col-md-6">
                <div class="testimonial-card">
                    <p>"The real-time analytics dashboard gives us valuable insights, improving our decision-making process."</p>
                    <h5 class="text-primary">Jane Smith, HR Manager</h5>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call-to-Action Section -->
<section class="cta-section">
    <div class="section-content text-center">
        <h2 class="text-white">Ready to Take Your HR Management to the Next Level?</h2>
        <a asp-controller="Home" asp-action="Contact" class="btn btn-gradient btn-lg mt-3">
            <i class="fas fa-paper-plane"></i> Contact Us Today
        </a>
    </div>
</section>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(to right, #ff512f, #dd2476);
            color: white;
            padding: 120px 20px;
            position: relative;
            width: 100%;
            text-align: center;
        }

        h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: url('https://svgshare.com/i/tkH.svg') no-repeat center;
            background-size: cover;
        }

        /* Features Section */
        .features-section {
            padding: 60px 20px;
            text-align: center;
        }

        .feature-card {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 12px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

        .icon {
            font-size: 3rem;
            color: #007bff;
            margin-bottom: 15px;
        }

        h4 {
            font-weight: 600;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        p {
            font-size: 1rem;
            color: #495057;
        }

        /* Testimonials Section */
        .testimonials-section {
            padding: 60px 20px;
        }

        .testimonial-card {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 12px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        h5 {
            margin-top: 15px;
        }

        /* Call-to-Action Section */
        .cta-section {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            padding: 80px 20px;
        }

        .btn-gradient {
            background: linear-gradient(135deg, #007bff, #6610f2);
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #6610f2, #007bff);
                transform: scale(1.05);
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            h1

        {
            font-size: 2.5rem;
        }

        h2 {
            font-size: 1.8rem;
        }

        .features-section, .testimonials-section, .cta-section {
            padding: 40px 15px;
        }

        .feature-card, .testimonial-card {
            margin-bottom: 20px;
        }

        }
    </style>
}
