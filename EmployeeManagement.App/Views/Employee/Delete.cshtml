@model EmployeeManagement.App.Dtos.EmployeeReadDto

@{
    ViewData["Title"] = "Delete Employee";
}

<!-- Hero Section -->
<div class="delete-hero py-5">
    <div class="container text-center">
        <h2 class="fw-bold text-white animate__animated animate__fadeInDown">Delete Employee</h2>
    </div>
</div>

<!-- Confirmation Section -->
<div class="container mt-5">
    <div class="confirmation-box text-center py-5 px-4">
        <h5 class="text-danger fw-bold mb-4">Are you sure you want to delete this employee?</h5>
        <div class="employee-details mb-4">
            <p class="employee-name text-primary">
                <i class="fas fa-user"></i> <strong>@Model.FirstName @Model.LastName</strong>
            </p>
            <p class="employee-info">
                <i class="fas fa-envelope text-muted"></i> <strong>Email:</strong> @Model.Email
            </p>
            <p class="employee-info">
                <i class="fas fa-briefcase text-muted"></i> <strong>Position:</strong> @Model.Position
            </p>
        </div>

        <!-- Form Actions -->
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg me-3">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Hero Section */
        .delete-hero {
            background: linear-gradient(135deg, #ff4e50, #f9d423);
            color: white;
            text-align: center;
        }

        h2 {
            font-size: 2.5rem;
            font-weight: 700;
        }

        /* Confirmation Box */
        .confirmation-box {
            background: #fff;
            border: 1px solid #dee2e6;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: auto;
            text-align: center;
        }

        .employee-details {
            font-size: 1.1rem;
            color: #495057;
        }

        .employee-name {
            font-weight: 600;
            font-size: 1.3rem;
            margin-bottom: 10px;
        }

        .employee-info {
            color: #6c757d;
            font-size: 1rem;
        }

        /* Button Styles */
        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            font-weight: 600;
            border: none;
            padding: 12px 24px;
            font-size: 1rem;
            border-radius: 6px;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            font-weight: 600;
            padding: 12px 24px;
            font-size: 1rem;
            border-radius: 6px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        /* Responsive Layout */
        @@media (max-width: 768px) {
            h2

        {
            font-size: 2rem;
        }

        .employee-details {
            font-size: 1rem;
        }

        .btn-danger, .btn-secondary {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        }

        @@media (max-width: 576px) {
            .employee-name

        {
            font-size: 1.1rem;
        }

        .btn-danger, .btn-secondary {
            padding: 8px 16px;
            font-size: 0.85rem;
        }

        }
    </style>
}


