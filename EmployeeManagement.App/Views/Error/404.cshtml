@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "404 - Page Not Found";
}

<!-- Hero Section -->
<div class="error-hero full-width py-5">
    <div class="container text-center text-white">
        <h1 class="display-1 fw-bold animate__animated animate__fadeInDown">404</h1>
        <h2 class="animate__animated animate__fadeInUp">Oops! Page Not Found</h2>
        <p class="lead animate__animated animate__fadeInUp">
            The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-gradient btn-lg mt-3 animate__animated animate__pulse animate__infinite">
            <i class="fas fa-home"></i> Back to Home
        </a>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Full-Width Hero Section */
        .error-hero {
            background: linear-gradient(135deg, #f14668, #6a82fb);
            color: white;
            text-align: center;
            padding: 80px 20px;
            width: 100%;
        }

        h1 {
            font-size: 6rem;
            font-weight: 700;
            margin-bottom: 10px;
        }

        h2 {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        /* Button Styles */
        .btn-gradient {
            background: linear-gradient(135deg, #007bff, #6610f2);
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            padding: 12px 24px;
            transition: all 0.3s ease;
        }

            .btn-gradient:hover {
                background: linear-gradient(135deg, #6610f2, #007bff);
                transform: scale(1.05);
            }

        .btn-lg {
            font-size: 1.2rem;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            h1

        {
            font-size: 4rem;
        }

        h2 {
            font-size: 1.75rem;
        }

        p {
            font-size: 1rem;
        }

        .btn-lg {
            padding: 10px 20px;
            font-size: 1rem;
        }

        }

        @@media (max-width: 576px) {
            h1

        {
            font-size: 3rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .btn-lg {
            padding: 8px 16px;
            font-size: 0.9rem;
        }

        }
    </style>
}
